<!DOCTYPE html>
<html>
  <head>
    <title>DockerForRails27</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
            <% if user_signed_in? %>
                 <%= render 'shared/head' %>
            <% else %>
                <%= render 'shared/before_head' %>
            <% end %>
    </header>
    <div class="container mt-5">
    <%= yield %>
    </div>
  </body>
</html>
