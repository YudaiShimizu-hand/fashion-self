<div class="like-link" id="like-link-<%= fashion.id %>">
  <% if current_user.likes.find_by(fashion_id: fashion.id ) %>
    <%= link_to unlike_path(fashion.id), method: :delete, remote: true do %>
        <div class = "iine__button">❤️<%= fashion.likes.count %></div>
    <% end %>
  <% else %>
    <%= link_to like_path(fashion.id), method: :post, remote: true do %>
        <div class = "iine__button">♡️<%= fashion.likes.count %></div>
    <% end %>
  <% end %>
</div>

